<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/backgroundLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/generated_by_ai"
            android:background="@color/buttonGreen"
            android:textColor="@color/white"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/task_card_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/task_card_sub"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- 题目示例 -->
        <TextView
            android:text="1. Question 1: ..."
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/rgDetail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:text="Answer A"/>
            <RadioButton android:text="Answer B"/>
            <RadioButton android:text="Answer C"/>
        </RadioGroup>

        <TextView
            android:text="2. Question 2: ..."
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/rgDetail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:text="Option 1"/>
            <RadioButton android:text="Option 2"/>
            <RadioButton android:text="Option 3"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnSubmitDetail"
            android:text="@string/btn_submit"
            android:background="@drawable/bg_button_green"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
