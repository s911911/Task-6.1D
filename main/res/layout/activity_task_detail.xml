<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    android:padding="16dp"
    android:paddingTop="36dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:text="âœ¨ Generated by AI"
            android:textColor="@color/buttonGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textStyle="bold" />

        <TextView
            android:text="Generated Task 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkBlue"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Generate a quiz with 3 questions to test students on the provided topic.For each question, generate 4 options where only one of the options is correct.Format your response as follows:"
            android:textColor="@color/primaryDarkBlue"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Question 1 -->
        <TextView
            android:id="@+id/tvQ1"
            android:text="1. Question 1"
            android:textSize="16sp"
            android:textColor="@color/primaryDarkBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rgDetail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Question 2 -->
        <TextView
            android:id="@+id/tvQ2"
            android:text="2. Question 2"
            android:textSize="16sp"
            android:textColor="@color/primaryDarkBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rgDetail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Question 3 -->
        <TextView
            android:id="@+id/tvQ3"
            android:text="3. Question 3"
            android:textSize="16sp"
            android:textColor="@color/primaryDarkBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rgDetail3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitDetail"
            android:text="Submit"
            android:background="@drawable/bg_button_green"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>


