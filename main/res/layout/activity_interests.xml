<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundLight"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/interests_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/interests_sub"
            android:textSize="14sp"
            android:textColor="@color/primaryDarkBlue"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridInterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            app:alignmentMode="alignMargins"
            app:useDefaultMargins="true">

            <ToggleButton
                android:id="@+id/btnAlgo"
                android:textOff="Algorithms"
                android:textOn="Algorithms"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ToggleButton
                android:id="@+id/btnDS"
                android:textOff="Data Structures"
                android:textOn="Data Structures"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ToggleButton
                android:id="@+id/btnWeb"
                android:textOff="Web Development"
                android:textOn="Web Development"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ToggleButton
                android:id="@+id/btnTest"
                android:textOff="Testing"
                android:textOn="Testing"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/btnNext"
            android:text="@string/btn_next"
            android:background="@drawable/bg_button_green"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>


